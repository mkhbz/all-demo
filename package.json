{
  "name": "blog",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "bootstrap-lerna": "lerna bootstrap",
    "init-lerna": "lerna init",
    "publish-lerna": "lerna publish",
    "main-start": "cd packages/main && yarn start",
    "main-build": "cd packages/main && yarn build",
    "vue-start": "cd packages/vue && yarn start",
    "vue-build": "cd packages/vue && yarn build"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "packages/**/*.jsx": [
      "eslint --fix",
      "git add"
    ],
    "packages/**/*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4"
  }
}